<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E66D6875"
    tools:context=".ui.play.PauseCourseFragment">
        <FrameLayout
            android:id="@+id/exercise_detail_main_frame"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/exercise_detail_pause_btn_group"
                            android:layout_width="250dp"
                            android:layout_height="100dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/exercise_detail_pause_imageView_group">
                                <Button
                                    android:id="@+id/exercise_detail_exit_btn"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    style="@style/CustomButton_exit"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/exercise_detail_play_btn"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>
                                <Button
                                    android:id="@+id/exercise_detail_play_btn"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    style="@style/CustomButton_play"
                                    app:layout_constraintStart_toEndOf="@+id/exercise_detail_exit_btn"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/exercise_detail_pause_imageView_group"
                            android:layout_width="300dp"
                            android:layout_height="80dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/exercise_detail_pause_btn_group"
                            app:layout_constraintBottom_toBottomOf="parent">
                                <ImageView
                                    android:id="@+id/exercise_detail_pause_imageView"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/exercise_detail_pause_imageView_group_text"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>
                                <TextView
                                    android:id="@+id/exercise_detail_pause_imageView_group_text"
                                    android:layout_width="150dp"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/momcake_bold"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="15dp"
                                    android:text="titletesttetletest"
                                    app:layout_constraintStart_toEndOf="@+id/exercise_detail_pause_imageView"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>