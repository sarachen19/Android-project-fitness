<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.exoplayer2.ui.DefaultTimeBar
        android:id="@+id/exo_progress"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        app:played_color="#5DB075"
        app:unplayed_color="#ffffff"
        app:bar_height="100dp"
        android:layout_margin="0dp"
        android:padding="0dp"
        app:touch_target_height="0dp"
        app:scrubber_enabled_size="0dp" />

    <ImageButton android:id="@+id/exo_play_pause_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center|bottom"
        style="@style/CustomButton_play_pause"/>

    <ImageButton
        android:id="@id/exo_prev"
        style="@style/CustomButton_prev"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center|bottom|start" />
    <ImageButton android:id="@id/exo_next"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center|bottom|end"
        style="@style/CustomButton_next"/>


    <TextView
        android:paddingStart="8dp"
        android:id="@+id/exo_current_time_remain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textSize="45dp"
        android:text="39"
        android:textStyle="bold"
        android:fontFamily="@font/comfortaa_bold"
        android:layout_gravity="top|start"/>
    <TextView
        android:paddingStart="8dp"
        android:id="@+id/exo_current_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="240dp"
        android:textSize="40dp"
        android:text="39"
        android:textStyle="bold"
        android:fontFamily="@font/comfortaa_bold"
        android:layout_gravity="bottom|start"/>
    <TextView
        android:paddingStart="8dp"
        android:id="@+id/exo_current_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="170dp"
        android:textSize="45dp"
        android:text="39"
        android:textStyle="bold"
        android:fontFamily="@font/comfortaa_bold"
        android:layout_gravity="bottom|start"/>
    <TextView
        android:paddingStart="8dp"
        android:id="@+id/exo_current_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="110dp"
        android:textSize="25dp"
        android:text="39"
        android:maxLength="20"
        android:textStyle="bold"
        android:fontFamily="@font/comfortaa_bold"
        android:layout_gravity="bottom|start"/>
    <TextView
        android:id="@+id/exo_see_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="110dp"
        android:textSize="12dp"
        android:text="NOTES"
        android:padding="10dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/notes_background"
        android:fontFamily="@font/comfortaa_bold"
        android:layout_gravity="bottom|end"/>

</FrameLayout>