<?xml version="1.0" encoding="utf-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/home_coordinate_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            >
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:statusBarScrim="@color/colorAccent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_launcher"
                            android:layout_margin="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Fitness"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:textSize="20dp"
                            android:fontFamily="@font/comfortaa_bold"
                            android:textStyle="bold"
                            android:textColor="#ffffff"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp">
                        <TextView
                            android:id="@+id/fragment_home_course_total_training_time_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Total Training Time"
                            android:textSize="16dp"
                            android:fontFamily="@font/comfortaa_bold"
                            android:textStyle="bold"
                            android:textColor="#ffffff"/>
                        <TextView
                            android:id="@+id/fragment_home_course_total_training_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_below="@+id/fragment_home_course_total_training_time_title"
                            android:text="219"
                            android:textSize="25dp"
                            android:fontFamily="@font/roboto_medium_numbers"
                            android:textStyle="bold"
                            android:textColor="#ffffff"/>
                        <TextView
                            android:id="@+id/fragment_home_course_total_training_time_minutes_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/fragment_home_course_total_training_time"
                            android:layout_alignBottom="@+id/fragment_home_course_total_training_time"
                            android:text="minutes"
                            android:textSize="12dp"
                            android:fontFamily="@font/comfortaa"
                            android:textStyle="bold"
                            android:textColor="#ffffff"/>
                        <TextView
                            android:id="@+id/fragment_home_course_today_training_time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/fragment_home_course_total_training_time_minutes_text"
                            android:layout_toLeftOf="@+id/fragment_home_course_today_training_time_minutes"
                            android:text="Today you spent "
                            android:textSize="13dp"
                            android:fontFamily="@font/comfortaa"
                            android:textColor="#ffffff"/>
                        <TextView
                            android:id="@+id/fragment_home_course_today_training_time_minutes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/fragment_home_course_today_training_time_minutes_text"
                            android:layout_alignBottom="@+id/fragment_home_course_today_training_time_text"
                            android:text=" - "
                            android:textSize="15dp"
                            android:fontFamily="@font/roboto_medium_numbers"
                            android:textStyle="bold"
                            android:textColor="#ffffff"/>
                        <TextView
                            android:id="@+id/fragment_home_course_today_training_time_minutes_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignBottom="@+id/fragment_home_course_today_training_time_minutes"
                            android:text="minutes"
                            android:textSize="13dp"
                            android:fontFamily="@font/comfortaa"
                            android:textColor="#ffffff"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#ffffff">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center_vertical"
                            android:text="My Courses"
                            android:textSize="18dp"
                            android:fontFamily="@font/comfortaa_bold"
                            android:textStyle="bold"
                            android:textColor="#6D6875"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_recycler_view_course_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="1dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/fragment_home_course" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
