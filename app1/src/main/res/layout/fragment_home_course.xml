<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_home_course_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_course_background"
    android:layout_marginVertical="3dp">

    <TextView
        android:id="@+id/fragment_home_course_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="20dp"
        android:text="testtesttesttesttest"
        android:textColor="#6D6875"
        android:fontFamily="@font/comfortaa_bold"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/fragment_home_course_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="k88"
        android:textColor="#6D6875"
        android:fontFamily="@font/comfortaa"
        android:textSize="13dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/fragment_home_course_last_trained"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="Last trained: never"
        android:textColor="#6D6875"
        android:fontFamily="@font/comfortaa"
        android:textSize="13dp"
        android:layout_below="@+id/fragment_home_course_title"
        android:textAppearance="?attr/textAppearanceListItem" />

</RelativeLayout>